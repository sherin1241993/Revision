<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/dt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="30dp"
        android:text="هيبيتا"
        android:textSize="45dp" />

    <ImageView
        android:id="@+id/dt_Image"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_below="@+id/dt_Name"
        android:layout_marginStart="35sp"
        android:layout_marginTop="35sp"
        android:src="@drawable/hebta" />

    <TextView
        android:id="@+id/subject_text"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:layout_below="@+id/dt_Image"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="36dp"
        android:text="مقدمة الكتاب"
        android:textAlignment="center"
        android:textSize="35sp" />
    <TextView
        android:id="@+id/dt_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subject_text"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"/>

   </RelativeLayout>

</ScrollView>